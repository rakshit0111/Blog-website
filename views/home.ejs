<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head.ejs") %>
    <title>Homepage</title>
</head>
<body>
    <%- include('./partials/nav.ejs') %>
    
    <div class="container mt-3">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <% blogs.forEach(blog => { %>
                <div class="col">
                    <div class="card h-100">
                        <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="<%= blog.title %>" style="max-width: 100%; height: auto;">
                        <div class="card-body">
                            <h5 class="card-title"><%= blog.title %></h5>
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary">Read Blog</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    
    <%- include("./partials/scripts.ejs") %>
</body>
</html>
